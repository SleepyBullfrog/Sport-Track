head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title SportTrack
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
  style.
    #table {
    width: 100%;
    border-collapse: separate; /* Utilisation de border-spacing */
    border-spacing: 10px; /* Espacement entre les cellules */
    }
    #table th, #table td {
    padding: 15px; /* Espace intérieur des cellules */
    border: 1px solid #ccc; /* Bordure des cellules */
    text-align: center; /* Centrer le texte dans les cellules */
    }
    #table th {
    background-color: #f2f2f2; /* Couleur d'arrière-plan des en-têtes */
    }
.container
  header.d-flex.flex-wrap.justify-content-center.py-3.mb-4.border-bottom
    a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.link-body-emphasis.text-decoration-none(href='/')
      span.fs-4 SportTrack
    ul.nav.nav-pills
      li.nav-item
        a.nav-link(href='/upload') Tableau de bord
      li.nav-item
        a.nav-link(href='/disconnect') D&eacute;connexion
h1.h3.mb-3.fw-normal.text-center Tableau de vos activit&eacute;s
.container
    if maTable.length > 0
      p.lead.mb-4 Vous avez #{maTable.length} activit&eacute;s :
      table#table
        thead
          tr
            th Description 
            th Date 
            th Heure de début
            th Dur&eacute;e 
            th Distance 
            th Cardio min 
            th Cardio max
            th Cardio moy
        tbody
          each activity in maTable 
            tr 
              td #{activity[0]}
              td #{activity[1]}
              td #{activity[2]}
              td #{activity[3]}
              td #{activity[4]}
              td #{activity[5]}
              td #{activity[6]}
              td #{activity[7]}
    else
      p.lead.mb-4 Vous n&apos;avez pas encore d&apos;activit&eacute;.
    