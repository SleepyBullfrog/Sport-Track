head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title SportTrack
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')

.container
  header.d-flex.flex-wrap.justify-content-center.py-3.mb-4.border-bottom
    a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.link-body-emphasis.text-decoration-none(href='/')
      span.fs-4 SportTrack
    ul.nav.nav-pills
      li.nav-item
        a.nav-link(href='/') Accueil
      li.nav-item
        a.nav-link(href='/users') Inscription
      li.nav-item
        a.nav-link.active(href='/connect' aria-current='page') Connexion
.container
  .w-50.m-auto
    form.form-signing(method='post' action='/connect')
      h1.h3.mb-3.fw-normal.text-center Connexion
      .form-floating
        input#email.form-control(type='email' name='email' placeholder='E-Mail' autofocus='' required='')
        label(for='email') E-Mail
      .form-floating.my-1
        input#passwd.form-control(type='password' name='passwd' minlength='8' placeholder='Mot de passe' required='')
        label(for='passwd') Mot de passe
      button.btn.btn-primary.w-100.py-2(type='submit') Se connecter
